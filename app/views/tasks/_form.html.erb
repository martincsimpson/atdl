<%= turbo_frame_tag dom_id(parent, :new_task_form) do %>
  <%= form_with(model: [parent, task], data: { turbo_frame: dom_id(parent, :new_task_form) }) do |form| %>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>
        <ul>
          <% task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.text_field :name, placeholder: "Name" %>
    </div>

    <div class="actions">
      <%= form.submit 'Save Task' %>
    </div>
  <% end %>
<% end %>