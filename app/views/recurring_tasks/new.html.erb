<h1><%= action_name.capitalize %> Recurring Task</h1>
<%= form_with(model: @recurring_task, local: true) do |form| %>
  <% if @recurring_task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recurring_task.errors.count, "error") %> prohibited this task from being saved:</h2>
      <ul>
        <% @recurring_task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :schedule %>
    <%= form.text_field :schedule %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'Back', recurring_tasks_path %>